<Window x:Class="program9._1_wpf_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:program9._1_wpf_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Введите n" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="48" Width="125" FontSize="18"/>
        <TextBox x:Name="n" HorizontalAlignment="Left" Height="48" TextWrapping="Wrap" VerticalAlignment="Top" Width="344" Margin="157,10,0,0" FontSize="18" AutomationProperties.Name="n"/>
        <Button x:Name="button" Content="Ответ" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Margin="10,104,0,0" Height="50" FontSize="18" AutomationProperties.Name="button" Click="button_Click"/>
        <TextBox x:Name="answer" HorizontalAlignment="Left" Height="305" TextWrapping="Wrap" VerticalAlignment="Top" Width="625" Margin="157,104,0,0" AutomationProperties.Name="answer" FontSize="18"/>

    </Grid>
</Window>
