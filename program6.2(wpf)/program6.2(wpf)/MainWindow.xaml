<Window x:Class="program6._2_wpf_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:program6._2_wpf_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Введите размер массива" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="43" Width="221" FontSize="18"/>
        <TextBox x:Name="a" HorizontalAlignment="Left" Height="33" TextWrapping="Wrap" VerticalAlignment="Top" Width="235" Margin="252,10,0,0" FontSize="18" AutomationProperties.Name="a"/>
        <Button x:Name="button" Content="Ответ" HorizontalAlignment="Left" VerticalAlignment="Top" Width="172" Margin="10,58,0,0" Height="51" FontSize="18" AutomationProperties.Name="button" Click="button_Click"/>
        <TextBox x:Name="answer" HorizontalAlignment="Left" Height="351" TextWrapping="Wrap" VerticalAlignment="Top" Width="530" Margin="252,58,0,0" FontSize="14" AutomationProperties.Name="answer"/>

    </Grid>
</Window>
