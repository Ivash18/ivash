<Window x:Class="program7._1_wpf_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:program7._1_wpf_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Напишите текст с цифрами" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="38" Width="243" FontSize="18"/>
        <TextBox x:Name="str_number" HorizontalAlignment="Left" Height="399" TextWrapping="Wrap" VerticalAlignment="Top" Width="482" Margin="300,10,0,0" FontSize="14" AutomationProperties.Name="str_number" TextChanged="text_num_TextChanged"/>
        <Button x:Name="button" Content="Ответ" HorizontalAlignment="Left" VerticalAlignment="Top" Width="243" Margin="10,67,0,0" Height="79" AutomationProperties.Name="button" FontSize="18" Click="button_Click"/>
        <TextBox x:Name="answer" HorizontalAlignment="Left" Height="92" TextWrapping="Wrap" VerticalAlignment="Top" Width="243" Margin="10,191,0,0" FontSize="18" AutomationProperties.Name="answer"/>

    </Grid>
</Window>
