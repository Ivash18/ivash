<Window x:Class="program8_wpf_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:program8_wpf_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Введите дату" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="34" Width="131" FontSize="18"/>
        <Button x:Name="Button" Content="Ответ" HorizontalAlignment="Left" VerticalAlignment="Top" Width="122" Margin="10,49,0,0" Height="39" FontSize="18" AutomationProperties.Name="Button" Click="Button_Click"/>
        <TextBox x:Name="answer" HorizontalAlignment="Left" Height="86" TextWrapping="Wrap" VerticalAlignment="Top" Width="378" Margin="191,49,0,0" FontSize="18" AutomationProperties.Name="answer"/>
        <TextBox x:Name="date" HorizontalAlignment="Left" Height="34" TextWrapping="Wrap" VerticalAlignment="Top" Width="406" Margin="191,10,0,0" FontSize="18" AutomationProperties.Name="date"/>

    </Grid>
</Window>
